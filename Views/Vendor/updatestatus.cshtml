
@{
    ViewBag.Title = "updatestatus";
    Layout = "~/Views/Shared/_Vendor.cshtml";
    TradeKerala2017.Models.tblOrders tblC = new TradeKerala2017.Models.tblOrders();
    try
    {
       tblC= ViewBag.EditOffer;
    }
    catch
    {

    }
}

<!-- page content -->



<link href="../../css/bootstrap-table.css" rel="stylesheet" type="text/css" />
<script src="../../js/jquery.min.js" type="text/javascript"></script>
<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Edit Offer<small>Details of Offer</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>

                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">


                @using (Html.BeginForm("updatestatus", "Vendor", FormMethod.Post, new { @enctype = "multipart/form-data", @Class = "form-horizontal form-label-left", @novalidate = "true" }))
                {
                    <span class="section">Edit Offer </span>


                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                            Status <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input  name="Id" type="hidden" value="@tblC.Orderno" />
                            <select class="select2_single form-control col-md-7 col-xs-12" name="status" tabindex="-1" onchange="LoadSubCat('Category','Subcat1','Sub1')">
                                <option value="">Select </option>
                                <option value="Packing On Progress">Packing On Progress</option>
                                <option value="Packing Completed">Packing Completed</option>
                                <option value="Shipping On Progress">Shipping On Progress</option>
                                <option value="Product Will Be Delivered In 5Days">Product Will Be Delivered In 5Days</option>
                                <option value="Product Will Be Delivered In 4Days">Product Will Be Delivered In 5Days</option>
                                <option value="Product Will Be Delivered In 3Days">Product Will Be Delivered In 3Days</option>
                                <option value="Product Will Be Delivered In 2Days">Product Will Be Delivered In 2Days</option>
                                <option value="Product Will Be Delivered Today">Product Will Be Delivered Today</option>
                                <option value="Completed">Completed</option>
                               
                            </select>


                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                            <button type="submit" class="btn btn-primary">Cancel</button>
                            <button id="send" type="submit" class="btn btn-success">Update</button><br />

                            <label>@ViewBag.Message</label>
                        </div>
                    </div>
                }

                <div class="alert alert-success alert-dismissable fade in">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>
                        <input id="Hidmsg" type="hidden" value="" />
                    </strong>
                </div>




            </div>
        </div>
    </div>
</div>

<script>
       $(function () {


           $(".alert").hide();
           var msg = $("#Hidmsg").val();
           if (msg != "") {
               $(".alert").fadeIn(2000);
           }
           else {
               $(".alert").fadeOut(500);
           }




           $(".select2_single").select2({
               placeholder: "Select a state",
               allowClear: true
           });

           $(".select2_single").change(function () {
               debugger;
               var Name = $(".select2_single option:selected").text();
               $("#HiddenCatName").val(Name);

           });


           $('#hover, #striped, #condensed').click(function () {
               var classes = 'table';

               if ($('#hover').prop('checked')) {
                   classes += ' table-hover';
               }
               if ($('#condensed').prop('checked')) {
                   classes += ' table-condensed';
               }
               $('#table-style').bootstrapTable('destroy')
						                .bootstrapTable({
						                    classes: classes,
						                    striped: $('#striped').prop('checked')
						                });
           });
       });

       function rowStyle(row, index) {
           var classes = ['active', 'success', 'info', 'warning', 'danger'];

           if (index % 2 === 0 && index / 2 < classes.length) {
               return {
                   classes: classes[index / 2]
               };
           }
           return {};
       }
</script>
<!-- /page content -->
<script src="../../js/jquery.min.js" type="text/javascript"></script>
<script src="../../js/bootstrap-table.js" type="text/javascript"></script>





