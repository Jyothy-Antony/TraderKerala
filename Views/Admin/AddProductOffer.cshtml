
@{
    ViewBag.Title = "AddProductOffer";
    Layout = "~/Views/Shared/_Admin.cshtml";
    TradeKerala2017.Models.DbTradekeralaEntities1 db = new TradeKerala2017.Models.DbTradekeralaEntities1();
    String Message = "";
    try
    {
        if (!String.IsNullOrEmpty(Request.QueryString["Msg"].ToString()))
        {
            Message = Request.QueryString["Msg"].ToString();
        }
    }
    catch
    {
    }
    }

        <!-- page content -->




        <script src="../../js/jquery.min.js" type="text/javascript"></script>
        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Add Product Offers and Deal  <small>Details of Product Offers and Deal </small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>

                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        @using (Html.BeginForm("AddProductOffer", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @Class = "form-horizontal form-label-left", @novalidate = "true" }))
                        {

                            <span class="section">Add Product Offers and Deal  </span>


                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                                    Product Name <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select class="select2_single form-control col-md-7 col-xs-12" name="ProId" id="Category" tabindex="-1" required="required" onchange="LoadSubCat('Category','Subcat1','Sub1')">
                                        <option></option>
                                        @{
                                            foreach (TradeKerala2017.Models.tblProduct tbD in ViewBag.product)
                                            {
                                                <option value="@tbD.pid">@tbD.ProdName</option>
                                            }
                                        }
                                    </select>


                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                                    Offer Name <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select class="select2_single form-control col-md-7 col-xs-12" name="OfferId" id="Category" tabindex="-1" required="required" onchange="LoadSubCat('Category','Subcat1','Sub1')">
                                        <option></option>
                                        @{
                                            foreach (TradeKerala2017.Models.tbl_specialoffer tbD in ViewBag.Offer)
                                            {
                                                <option value="@tbD.id">@tbD.offer_name</option>
                                                
                                            }
                                        }
                                    </select>


                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                    Discount <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" name="txtDiscount" placeholder="Discount" required="required" type="text">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                   New Product Price <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" name="txtPrice" placeholder="New Product Price" required="required" type="text">
                                </div>

                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                    New Dollar Price <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" name="txtDollarPrice" placeholder="New Dollar Price" required="required" type="text">
                                </div>

                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-3">
                                    <button type="submit" class="btn btn-primary">Cancel</button>
                                    <button id="send" type="submit" class="btn btn-success">Submit</button><br />

                                    <label>@ViewBag.Message</label>
                                </div>
                            </div>
                        }

                        <div class="alert alert-success alert-dismissable fade in">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong>
                                <input id="Hidmsg" type="hidden" value="@Message" /> @Message
                            </strong>
                        </div>
                        <table data-toggle="table" data-url="tables/data1.json" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc">
                            <thead>
                                <tr>
                                    <th data-field="state" data-checkbox="true">ID</th>
                                    <th data-field="ID" data-sortable="true">ID</th>
                                    <th data-field="ProductName" data-sortable="true">Product Name</th>
                                    <th data-field="Offer Name" data-sortable="true">Offer Name</th>
                                    <th data-field="Discount" data-sortable="true">Discount</th>
                                    <th data-field="New Price" data-sortable="true">New Price</th>
                                    <th data-field="New Dollar" data-sortable="true">New Dollar</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            @{
                                foreach (TradeKerala2017.Models.tbl_ProductOffer tbl in ViewBag.OfferPro)
                                {
                                    <tr>
                                        <td>@tbl.Id</td>
                                        <td>@tbl.Id</td>
                                        <td>@tbl.ProdName</td>
                                        @foreach (TradeKerala2017.Models.tbl_specialoffer tm in db.tbl_specialoffer.Where(i => i.id == tbl.Offer_Id).ToList())
                                        {
                                            <td>@tm.offer_name</td>
                                        }
                                        <td>@tbl.Discount</td>
                                        <td>@tbl.NewPrice</td>
                                        <td>@tbl.DollarPrice</td>
                                        
                                        


                                        <td><a class="btn btn-primary btn-sm" href="EditProOffer?id=@tbl.Id"><i class="fa fa-pencil" aria-hidden="true" title="Edit Details"> Edit</i></a> </td>
                                        <td><a class="btn btn-primary btn-sm" href="DeleteProOffer?id=@tbl.Id&name=@tbl.ProdName"><i class="fa fa-trash-o" aria-hidden="true" title="Delete Details" onclick="return confirm('Do You Want To Delete?')"> Delete</i></a></td>
                                    </tr>


                                }
                            }

                        </table>



                    </div>
                </div>
            </div>
        </div>

        <script>
            $(function () {


                $(".alert").hide();
                var msg = $("#Hidmsg").val();
                if (msg != "") {
                    $(".alert").fadeIn(2000);
                }
                else {
                    $(".alert").fadeOut(500);
                }
            });
        </script>


