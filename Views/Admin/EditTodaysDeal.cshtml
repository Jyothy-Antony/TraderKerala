
@{
    ViewBag.Title = "EditTodaysDeal";
    Layout = "~/Views/Shared/_Admin.cshtml";
    TradeKerala2017.Models.DbTradekeralaEntities1 db = new TradeKerala2017.Models.DbTradekeralaEntities1();
    TradeKerala2017.Models.tbl_TodaysDeal tblC = new TradeKerala2017.Models.tbl_TodaysDeal();




    try
    {
        tblC = ViewBag.EditProOffer;
    }
    catch
    {

    }
}

<!-- page content -->




<script src="../../js/jquery.min.js" type="text/javascript"></script>
<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Edit Today's Deals  <small>Details of Today's Deals </small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>

                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                @using (Html.BeginForm("EditTodaysDeal", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @Class = "form-horizontal form-label-left", @novalidate = "true" }))
                {

                    <span class="section">Edit Product Offers and Deal  </span>
                    <input type="hidden" name="HiddenId" value="@tblC.Id" />

                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                            Product Name <span class="required">*</span><br />
                            *Your Have Already Selected Product Name as  <span style="color:red"> <b>@tblC.ProdName</b></span> . If you want to change product please choose again!
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <select class="select2_single form-control col-md-7 col-xs-12" name="ProId" id="Category" tabindex="-1" required="required">
                                <option value="@tblC.Pid">@tblC.ProdName</option>
                                @{
                                    foreach (TradeKerala2017.Models.tblProduct tbD in ViewBag.product)
                                    {
                                        <option value="@tbD.pid">@tbD.ProdName</option>
                                    }
                                }
                            </select>


                        </div>
                    </div>
                    
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            Discount <span class="required">*</span>

                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" name="txtDiscount" placeholder="Discount" required="required" type="text" value="@tblC.Discount">
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            New Product Price <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" name="txtPrice" placeholder="New Product Price" required="required" type="text" value="@tblC.NewPrice">
                        </div>

                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            New Dollar Price <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" name="txtDollarPrice" placeholder="New Dollar Price" required="required" type="text" value="@tblC.DollarPrice">
                        </div>

                    </div>

                    

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-3">
                                    <button type="submit" class="btn btn-primary">Cancel</button>
                                    <button id="send" type="submit" class="btn btn-success">Submit</button><br />

                                    <label>@ViewBag.Message</label>
                                </div>
                            </div>
                                    }


            </div>
        </div>
    </div>
</div>
<script>
   $(".select2_single").select2({
               placeholder: "Select a state",
               allowClear: true
           });

           $(".select2_single").change(function () {
               debugger;
               var Name = $(".select2_single option:selected").text();
               $("#HidStoreId").val(Name);

           });


           $('#hover, #striped, #condensed').click(function () {
               var classes = 'table';

               if ($('#hover').prop('checked')) {
                   classes += ' table-hover';
               }
               if ($('#condensed').prop('checked')) {
                   classes += ' table-condensed';
               }
               $('#table-style').bootstrapTable('destroy')
						                .bootstrapTable({
						                    classes: classes,
						                    striped: $('#striped').prop('checked')
						                });
           });
       });

       function rowStyle(row, index) {
           var classes = ['active', 'success', 'info', 'warning', 'danger'];

           if (index % 2 === 0 && index / 2 < classes.length) {
               return {
                   classes: classes[index / 2]
               };
           }
           return {};
       }
</script>
