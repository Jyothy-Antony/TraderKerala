
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";

String Message = "";
    TradeKerala2017.Models.DbTradekeralaEntities1 db = new TradeKerala2017.Models.DbTradekeralaEntities1();
    try
    {
        if (!String.IsNullOrEmpty(Request.QueryString["Msg"].ToString()))
        {
            Message = Request.QueryString["Msg"].ToString();
        }
    }
    catch
    {
    }
    }

<!-- page content -->

<script src="../../js/jquery.min.js" type="text/javascript"></script>
<style>
    #Sub1,#Sub2,#Sub3{
        display:none;
    }

</style>
<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Add Sub Category <small>Details of Sub Category</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>

                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                
                @using (Html.BeginForm("AddSubCategory", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @Class = "form-horizontal form-label-left", @novalidate = "true" }))
                {
                   
                    <span class="section">Add Sub Category</span>

                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                            Category <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="HiddenParentId" name="HiddenParentId" type="hidden" value="" />
                            <input id="HiddenCatName" name="HiddenCatName" type="hidden" value=""/>
                            <select class="select2_single form-control col-md-7 col-xs-12" name="CategoryId" id="Category" tabindex="-1" required="required" onchange="LoadSubCat('Category','Subcat1','Sub1')">
                                <option></option>
                                @{
                                    foreach (TradeKerala2017.Models.tblCategory tbD in ViewBag.CategoryDetails)
                                    {
                                        <option value="@tbD.Catid">@tbD.CatName</option>
                                    }
                                }
                            </select>


                        </div>
                    </div>
                  

                    <!--Subcategory1-->
                                    <div class="item form-group" id="Sub1">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                                            SubCategory Level One <span ></span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                           
                                            <select class="select2_single form-control col-md-7 col-xs-12" name="dCatid" id="Subcat1" tabindex="-1" onchange="LoadSubCat('Subcat1','Subcat2','Sub2')" style="width: 497px;">
                                                <option></option>
                                               
                                            </select>


                                        </div>
                                    </div>
                     <!--Subcategory End-->

                    <!--Subcategory2-->
                                <div class="item form-group" id="Sub2">
                                  <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                                      SubCategory Level Two <span ></span>
                                    </label>
                                      <div class="col-md-6 col-sm-6 col-xs-12">
                                         <select class="select2_single form-control col-md-7 col-xs-12" name="dCatid" id="Subcat2" tabindex="-1"  onchange="LoadSubCat('Subcat2','Subcat3','Sub3')" style="width: 497px;">
                                          <option></option>
                                                  
                                          </select>
                                     </div>
                                 </div>
                    <!--Subcategory End-->

                    <!--Subcategory3-->
                                <div class="item form-group" id="Sub3">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                                    SubCategory Level Three <span></span>
                                                </label>
                                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                                            <select class="select2_single form-control col-md-7 col-xs-12" name="dCatid" id="Subcat3" tabindex="-1" onchange="LoadSubCat('Subcat3','Subcat3','Sub3')" style="width: 497px;">
                                                                <option></option>

                                                            </select>
                                                        </div>
                                                    </div>
                     <!--Subcategory End-->

                    <!--Subcategory Last-->
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            Child Sub Category <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="Subcat4" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" name="txtSubCat" placeholder="SubCategory Name" required="required" type="text">
                        </div>
                    </div>
                    <!--End-->

                    

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                            <button type="submit" class="btn btn-primary">Cancel</button>
                            <button id="send" type="submit" class="btn btn-success">Submit</button><br />

                            <label>@ViewBag.Message</label>
                        </div>
                    </div>
                                    }

                <div class="alert alert-success alert-dismissable fade in">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>
                        <input id="Hidmsg" type="hidden" value="@Message" /> @Message
                    </strong>
                </div>
                <table data-toggle="table" data-url="tables/data1.json" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc">
                    <thead>
                        <tr>
                            <th data-field="state" data-checkbox="true">ID</th>
                            <th data-field="Catid" data-sortable="true">ID</th>
                            <th data-field="CatName" data-sortable="true">Subcategory Name</th>
                            @*<th data-field="ParentName" data-sortable="true">Parent Category</th>*@
                            

                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    @{
                        foreach (TradeKerala2017.Models.tblCategory tbl in ViewBag.SubCategoryDetails)
                        {
                            <tr>
                                <td>@tbl.Catid</td>
                                <td>@tbl.Catid</td>
                                <td>@tbl.CatName</td>
                                @*<td>@db.tblCategories.Where(i=>i.Catid==tbl.ParentId).FirstOrDefault().CatName</td>*@
                               

                                <td><a class="btn btn-primary btn-sm" href="EditSubCategory?id=@tbl.Catid"><i class="fa fa-pencil" aria-hidden="true" title="Edit Details"></i>Edit</a></td>
                                <td><a class="btn btn-primary btn-sm" href="DeleteSubCategory?id=@tbl.Catid&name=@tbl.CatName"><i class="fa fa-trash-o" aria-hidden="true" title="Delete Details" onclick="return confirm('Do You Want To Delete?')"></i>Delete</a></td>
                            </tr>


                        }
                    }

                </table>



            </div>
        </div>
    </div>
</div>

<script>
       $(function () {
           

           $(".alert").hide();
           var msg = $("#Hidmsg").val();
           if (msg != "") {
               $(".alert").fadeIn(2000);
           }
           else {
               $(".alert").fadeOut(500);
           }




           $(".select2_single").select2({
               placeholder: "Select",
               allowClear: true
           });

           $("#Subcat1").change(function () {
               if ($(this).val() == 0) {
                   $("#Subcat2").empty();
                   $("#Subcat3").empty();
                   $("#Sub2").hide();
                   $("#Sub3").hide();
               }
                               
           });
           $("#Subcat2").change(function () {
               if ($(this).val()== 0) {
                  
                   $("#Subcat3").empty();
                   $("#Sub3").hide();
               }

           });

           $('#hover, #striped, #condensed').click(function () {
               var classes = 'table';

               if ($('#hover').prop('checked')) {
                   classes += ' table-hover';
               }
               if ($('#condensed').prop('checked')) {
                   classes += ' table-condensed';
               }
               $('#table-style').bootstrapTable('destroy')
						                .bootstrapTable({
						                    classes: classes,
						                    striped: $('#striped').prop('checked')
						                });
           });
       });

       function rowStyle(row, index) {
           var classes = ['active', 'success', 'info', 'warning', 'danger'];

           if (index % 2 === 0 && index / 2 < classes.length) {
               return {
                   classes: classes[index / 2]
               };
           }
           return {};
       }
       function LoadSubCat(Parentname, ChildName,DivSub)
       {
       
           var ParentId = $("#" + Parentname).val();
           if (ParentId != 0 || ParentId != null || ParentId!="") {
                         

               // var HiddenVal = $("#HiddenParentId").val() + ParentId + "~";
               $("#HiddenParentId").val(ParentId);
           console.log("HiddenValue- "+$("#HiddenParentId").val());
           var options = {};

           options.url = "/Admin/GetSubcategory";
           options.type = "POST";
           options.data = JSON.stringify({ ParentId: ParentId });
           options.dataType = "json";
           options.contentType = "application/json";
           options.success = function (data) {
             
               if (data.length > 0)
               { 
                   $("#" + ChildName).empty();
                
                   $("#" + ChildName).append("<option value='0'>Select</option>");
               for (var i = 0; i < data.length; i++) {
                   var opt = data[i].split('-');
                  
                   $("#" + ChildName).append("<option value=" + opt[0] + ">" + opt[1] + "</option>");
                  
               }
               $("#" + DivSub).show();
             
              
               }
               else {
                   //$("#" + DivSub).hide();
               }
              
           };
           options.error = function () { };
           $.ajax(options);
           }
           else {
               $("#" + ChildName).empty();
               $("#" + DivSub).hide();
           }
       }
</script>



