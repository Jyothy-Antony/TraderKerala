
@{
    ViewBag.Title = "EditProOffer";
    Layout = "~/Views/Shared/_Admin.cshtml";
    TradeKerala2017.Models.DbTradekeralaEntities1 db = new TradeKerala2017.Models.DbTradekeralaEntities1();
    TradeKerala2017.Models.tbl_ProductOffer tblC = new TradeKerala2017.Models.tbl_ProductOffer();


    
    
    try
    {
        tblC = ViewBag.EditProOffer;
    }
    catch
    {

    }
}

<!-- page content -->




<script src="../../js/jquery.min.js" type="text/javascript"></script>
<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Edit Product Offers and Deal  <small>Details of Product Offers and Deal </small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>

                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                @using (Html.BeginForm("EditProOffer", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @Class = "form-horizontal form-label-left", @novalidate = "true" }))
                {

                    <span class="section">Edit Product Offers and Deal  </span>
                    <input type="hidden" name="HiddenId" value="@tblC.Id" />

                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                            Product Name <span class="required">*</span><br />
                            *Your Have Already Selected Product Name as  <span style="color:red"> <b>@tblC.ProdName</b></span> . If you want to change product please choose again!
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <select class="select2_single form-control col-md-7 col-xs-12" name="ProId" id="Category" tabindex="-1" required="required">
                                <option value="@tblC.Pid">@tblC.ProdName</option>
                                @{
                                    foreach (TradeKerala2017.Models.tblProduct tbD in ViewBag.product)
                                    {
                                        <option value="@tbD.pid">@tbD.ProdName</option>
                                    }
                                }
                            </select>


                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                            Category <span class="required">*</span><br />
                            @{ String OfferName = db.tbl_specialoffer.Where(i => i.id == tblC.Offer_Id).FirstOrDefault().offer_name;
                            }
                            *Your Have Already Selected Product Name as  <span style="color:red"> <b>@OfferName</b></span> . If you want to change
                            please choose again!
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <select class="select2_single form-control col-md-7 col-xs-12" name="OfferId" id="Category" tabindex="-1" required="required" onchange="LoadSubCat('Category','Subcat1','Sub1')">
                              
                                 <option value="@tblC.Offer_Id">@OfferName</option>
                                @{
                                    foreach (TradeKerala2017.Models.tbl_specialoffer tbD in ViewBag.Offer)
                                    {
                                        <option value="@tbD.id">@tbD.offer_name</option>

                                    }
                                }
                            </select>


                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            Discount <span class="required">*</span>
                           
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" name="txtDiscount" placeholder="Discount" required="required" type="text" value="@tblC.Discount">
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            New Product Price <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" name="txtPrice" placeholder="New Product Price" required="required" type="text"  value="@tblC.NewPrice">
                        </div>

                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                            New Dollar Price <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="name" class="form-control col-md-7 col-xs-12" data-validate-length-range="6" name="txtDollarPrice" placeholder="New Dollar Price" required="required" type="text" value="@tblC.DollarPrice">
                        </div>

                    </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-3">
                                    <button type="submit" class="btn btn-primary">Cancel</button>
                                    <button id="send" type="submit" class="btn btn-success">Submit</button><br />

                                    <label>@ViewBag.Message</label>
                                </div>
                            </div>
                                    }

               
            </div>
        </div>
    </div>
</div>  
<script>
   $(".select2_single").select2({
               placeholder: "Select a state",
               allowClear: true
           });
        </script>

