
@{
    Layout = "~/Views/Shared/_Newlayout.cshtml";
    TradeKerala2017.Models.tb_address ad = ViewBag.address;
}

<style>
  
    label {
        font-weight: 300;
        line-height: 1.5em;
        margin-bottom: 10px;
    }

    hr {
        margin: 0px;
    }

    input[type="radio"] {
        margin-top: 7px;
    }
    @@media screen and (max-width: 768px) {
        #add{ margin-left:0px !important;padding:0px;}
        #del {margin-right:0px !important;padding:0px;
        }
        .container-fluid{
            padding:0px;
        }
   h3{font-size:20px;}
    }
</style>
