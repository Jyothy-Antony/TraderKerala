            <form action="DelivaryMethod" method="post">
                <div class="form-group">
                    <label for="radio" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10" style="padding:0px;">
                        <div class="radio-inline" style="display:inline-grid">
                            <label><input type="radio" name="delivary" value="1" checked> Standard delivary</label>
                            <label><input type="radio" name="delivary" value="1"> scheduled delivary</label>
                            <label><input type="radio" name="delivary" value="1"> Oneday delivary</label>
